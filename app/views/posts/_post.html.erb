<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div class="flex">
    <div>
      <div class="flex gap-10">
        <div>
          <strong class="block font-medium mb-1">ID:</strong>
          <%= post.id %>
        </div>
        <div>
          <strong class="block font-medium mb-1">Title:</strong>
          <%= post.title %>
        </div>
      </div>
      <div>
        <strong class="block font-medium mb-1">Image url:</strong>
        <%= image_tag(post.image_url, class:"max-w-1/3") %>
      </div>
    </div>
    <div class="flex flex-row gap-2">
      <%= link_to "Show", post, class: "h-12 text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
      <%= link_to "Edit", edit_post_path(post), class: "h-12 text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
      <%= button_to "Destroy", post, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
