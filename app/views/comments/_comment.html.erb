<div id="<%= dom_id comment %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <span><%= comment.id %></span>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= comment.body %>
  </div>
  <%= link_to "Edit this comment", edit_comment_path(comment), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this comment", comment, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
