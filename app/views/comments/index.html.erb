<% content_for :title, "Comments" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Comments</h1>
    <%= link_to "New comment", new_comment_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <div id="comments" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @comments.any? %>
      <% @comments.each do |comment| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render comment %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No comments found.</p>
    <% end %>
  </div>
  <div id="load_more" class="pagination mt-4">
    <%= render partial: "load_more" %>
  </div>
</div>
